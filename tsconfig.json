{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "allowJs": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "strictPropertyInitialization": false,
    "moduleResolution": "node",
    "baseUrl": "./src",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": true,
    "skipLibCheck": true,
    "types": ["node"],
    "typeRoots": [
      "./node_modules/@types",
      "src/@types"
    ],
    "paths": {
      "@config/*": ["./config/*"],
      "@modules/*": ["./modules/*"],
      "@core/*": ["./core/*"],
      "@helpers/*": ["./helpers/*"],
      "@shared/*": ["./shared/*"],
      "@assets/*": ["./assets/*"],
    }
  },
  "include": ["src"],
  "exclude": ["./node_modules", "./mongo"]
}